{
    "compilerOptions": {
        "baseUrl": ".",
        "moduleResolution": "node",
        "target": "es6",
        "module": "commonjs",
        "lib": ["es2015", "es2016", "es2017", "es6"],
        "strict": false,
        "sourceMap": true,
        "declaration": true,
        "outDir": "build/js",
        "typeRoots": ["node_modules/@types"]
    },
    "include": [
        "test/ts/*.ts",
        "test/typescript/**/*.ts",
        "types/*.ts",
        "typescript/**/*.ts"
    ]
}
